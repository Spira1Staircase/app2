<% if @book.errors.any? %>
                  <div id="error_explanation">
                    <h2><%= @book.errors.count %>件のエラーが発生しました。</h2>
                    <ul>
                    <% @book.errors.full_messages.each do |message| %>
                      <li>error <%= message %></li>
                    <% end %>
                    </ul>
                  </div>
                <% end %>

<h1>Editing Book</h1>
<%= form_for(@book)  do |f| %>
	<label>Title</label>
	<%= f.text_field :title %>
	<label>Opinion</label>
	<%= f.text_area :body %>
	<%= f.submit 'Update Book' %>
<% end %>