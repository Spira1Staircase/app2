<div class="user-box">
  <h2> User info </h2>
  <div class="user-profile">

  </div>
  <div class="user-name">
    <label>name</label>
    <%= @user.name %>
  </div>
</div>

<div class="book-index">
  <h1>投稿一覧画面部分</h1>
      <tr>
        <th>Title</th>
        <th>opinion</th>
      </tr>
      <% @books.each do |book| %>
      <tr>
          <td><%= book.title %></td>
          <td><%= book.opinion %></td>
          <td><%= book.user.name %></td>
          <td><%= link_to "Destroy", book_path(book.id), method: :delete, data: {confirm: "Are you sure?"} %></td>
      </tr>
      <% end %>

</div>

  <div>
    <h1>投稿部分</h1>
        <%= form_for(@book, url: books_path) do |f| %>
        <div>
        <label>Title</label>
          <%= f.text_field :title %>
        </div>
        <div>
          <label>Opinion</label>
            <%= f.text_area :opinion %>
        </div>
        <div>
            <%= f.submit 'create' %>
        <% end %>
        </div>
  </div>