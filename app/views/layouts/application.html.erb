<!DOCTYPE html>
<html>
  <head>
    <%= csrf_meta_tags %>
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.js"></script>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Bookers</title>
    <link href='https://fonts.googleapis.com/css?family=Raleway:400,600,700' rel='stylesheet' type='text/css'>
    <link href='https://fonts.googleapis.com/css?family=Open+Sans:400,600,700' rel='stylesheet' type='text/css'>
  </head>
            <nav class="navbar navbar-inverse">
              <div class="container-fluid">
                    <ul class="nav navbar-nav">
                      <p class="navbar-text">Bookers</p>
                    </ul>
                    <ul class="nav navbar-nav navbar-right">
                      <% if user_signed_in? %>
                          <li>
                              <%= link_to user_path(current_user) do %>
                              <span class="glyphicon glyphicon-home" aria-hidden="true"></span>  Home
                              <% end %>
                          </li>
                          <li>
                            <%= link_to users_path do %>
                            <span class="glyphicon glyphicon-user" aria-hidden="true"></span>  Users
                            <% end %>
                          </li>
                          <li>
                              <%= link_to books_path do %>
                              <span class="glyphicon glyphicon-book" aria-hidden="true"></span>  Books
                              <% end %>
                          </li>
                          <li>
                              <a rel="nofollow" data-method="delete" href="/users/sign_out">
                                <span class="glyphicon glyphicon-log-out" aria-hidden="true"></span>  logout
                              </a>
                          </li>
                      <% else %>
                          <li>
                              <%= link_to root_path do %>
                              <span class="glyphicon glyphicon-home" aria-hidden="true"></span>  Home
                              <% end %>
                          </li>
                          <li>
                            <%= link_to home_about_path do %><span class="glyphicon glyphicon-link" aria-hidden="true"></span>  About
                            <% end %>
                          </li>
                          <li>
                              <%= link_to new_user_registration_path do %>
                              <span class="glyphicon glyphicon-edit" aria-hidden="true"></span>  sign up
                              <% end %>
                          </li>
                          <li>
                              <%= link_to new_user_session_path do %>
                              <span class="glyphicon glyphicon-log-in" aria-hidden="true"></span>  login
                              <% end %>
                          </li>
                      <% end %>
                    </ul>
            </nav>
  <div class="flash">
  <% if flash[:notice] %>
        <%= flash[:notice] %>
    <% end %>
  </div>
      <%= yield %>
</html>