<h2>プロフィール編集ページ</h2>
<!--名前(Name)と画像(Image)と説明(Introduction)でUpdateUser-->
<%= form_for(@user,url:"/users/#{@user.id}") do |f| %>
    <div class="form-group has-icon">
        <label class="control-label sr-only" for="inputEmail">Name</label>
        <%= f.text_field :name, autofocus: true, class:"form-control", id:"inputEmail", placeholder:"名前"%>
    </div>
    <div class="edit-profile-image">
    	<label>Image</label>
    	<%= f.attachment_field :profile_image, placeholder: "プロフィール画像" %>
	</div>
    <div>
        <label class="Introduction">Introduction</label>
        <%= f.text_area :introduction, autofocus: true, class:"form-control", id:"inputEmail", placeholder:"Introduction" %>
    </div>
    <%= f.submit "Update User" %>
<% end %>