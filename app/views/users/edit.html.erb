<h2>プロフィール編集ページ</h2>
<!--名前(Name)と画像(Image)と説明(Introduction)でUpdateUser-->
<%= form_for(@user,url:"/users/#{@user.id}") do |f| %>
    <div class="form-group has-icon">
        <label class="control-label sr-only" for="inputEmail">Name</label>
        <%= f.text_field :name, autofocus: true, class:"form-control", id:"inputEmail", placeholder:"名前"%>
    </div>
    <div class="edit-profile-image">
    	<div class="profile_image">
    		<%= attachment_image_tag @user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg" %>
    	</div>
    	<label>Image</label>
    	<%= f.attachment_field :profile_image, placeholder: "プロフィール画像" %>
	</div>
    <%= f.submit "Update User" %>
<% end %>