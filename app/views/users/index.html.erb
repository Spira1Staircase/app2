<!--Users page-->
<div class="container">
  <div class="row">
                <% if @book.errors.any? %>
                  <div id="error_explanation">
                    <h2><%= @book.errors.count %>件のエラーが発生しました。</h2>
                    <ul>
                    <% @book.errors.full_messages.each do |message| %>
                      <li>error <%= message %></li>
                    <% end %>
                    </ul>
                  </div>
                <% end %>

    <div class="col-xs-3">
        <h2> User info </h2>
          <div class="user-profile">
            <div class="user-profile-image">
                <%= attachment_image_tag @user, :profile_image, :fill, 60, 60, format: 'joeg', fallback: "no_image.jpg" %>
            </div>
              <div class="user-name">
                <label>name</label>
                <%= @user.name %>
              </div>
              <div class="introduction">
                <label>Introduction</label>
                <%= @user.introduction %>
              </div>
              <div class="edit-user">
                <p class = "btn btn-default btn-block">
                  <%= link_to edit_user_path(@user.id) do %>
                  <span class="glyphicon glyphicon-wrench" aria-hidden="true"></span>
                  <% end %>
                </p>
              </div>
          </div>
          <div>
              <h1>投稿部分</h1>
                  <%= form_for(@book, url: books_path) do |f| %>
                  <% if @book.errors.any? %>
                  <div id="error_explanation">
                    <h2><%= @book.errors.count %>件のエラーが発生しました。</h2>
                    <ul>
                    <% @book.errors.full_messages.each do |message| %>
                      <li><%= message %></li>
                    <% end %>
                    </ul>
                  </div>
                <% end %>
                  <div>
                    <label>Title</label><br>
                      <%= f.text_field :title %>
                  </div>
                  <div>
                      <label>Opinion</label><br>
                        <%= f.text_area :body %>
                  </div>
                  <div>
                        <%= f.submit :class=> "btn btn-primary btn-block" %>
                  <% end %>
                  </div>
          </div>
    </div>
      <div class="col-xs-9">
          <h1>Users</h1>
            <table class="table table-striped">
                    <tr>
                      <th>image</th>
                      <th>name</th>
                    </tr>
                    <% @users.each do |user| %>
                    <tr>
                        <td><%= attachment_image_tag user, :profile_image, :fill, 20, 20, format: 'joeg', fallback: "no_image.jpg", style: "width: 50px; height: 50px;" %></td>
                        <td><%= user.name %></td>
                        <td><%= link_to "Show", user_path(user) %></td>
                    </tr>
                    <% end %>
            </table>
      </div>
  </div>