  <!--<div class="books-index-page">-->
      <div class="user-box">
        <h2> User info </h2>
          <div class="user-profile">
              <div class="user-name">
                <label>name</label>
                <%= @user.name %>
              </div>
              <div class="user-profile-image">
                <%= attachment_image_tag @user, :profile_image, :fill, 60, 60, format: 'joeg', fallback: "no_image.jpg" %>
              </div>
              <div class="edit-user">
                <% if @user.id == current_user.id %>
                <p><%= link_to "プロフィール編集", edit_user_path(@user), class: "pull-right" %></p>
                <% end %>
              </div>
          </div>
          <div>
              <h1>投稿部分</h1>
                  <%= form_for(@book, url: books_path) do |f| %>
                  <div>
                    <label>Title</label>
                      <%= f.text_field :title %>
                  </div>
                  <div>
                      <label>Opinion</label>
                        <%= f.text_area :opinion %>
                  </div>
                  <div>
                        <%= f.submit 'create' %>
                  <% end %>
                  </div>
          </div>
      </div>

      <div class="book-index">
          <h1>Books</h1>
            <table>
                    <tr>
                      <th>Title</th>
                      <th>opinion</th>
                    </tr>
                    <% @books.each do |book| %>
                    <tr>
                        <td><%= book.user.name %></td>
                        <td><%= book.title %></td>
                        <td><%= book.opinion %></td>
                        <td><%= link_to "Destroy", book_path(book.id), method: :delete %></td>
                    </tr>
                    <% end %>
            </table>
      </div>
  </div>